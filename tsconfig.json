{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "data/products.js",
    "hooks/use-mobile.js",
    "lib/utils.js",
    "global.d.js",
    "next.config.js",
    "app/layout.jsx",
    "app/page.jsx",
    "app/product/[slug]/page.jsx"
, "app/api/checkout/route.js", "context/CartProvider.jsx", "components/AddToCart.jsx", "components/NavBar.jsx", "components/ProductCard.jsx", "components/ProductList.jsx"  ],
  "exclude": ["node_modules"]
}
